<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title"}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author"}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{textarea cols="80" rows="6" value=body id="body" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="category">Category</label>
    {{input value=category id="category" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date id="date" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="tags">Tags</label>
    {{input value=tags id="tags" class="form-control"}}
  </div>
  <button {{action 'save'}}>Save</button>
</form>
